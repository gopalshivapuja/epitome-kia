# ===========================================
# Epitome Kia - Environment Variables
# ===========================================
# Copy this file to .env.local for local development
# For production (Railway), set these in the dashboard
#
# Required variables are marked with [REQUIRED]
# Railway auto-injects DATABASE_URL when you add PostgreSQL

# ===========================================
# Database [REQUIRED]
# ===========================================
# Railway auto-injects this when you add PostgreSQL
DATABASE_URL="postgresql://user:password@localhost:5432/epitome_kia?schema=public"

# ===========================================
# Authentication [REQUIRED]
# ===========================================
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-key-here"

# Your app URL (no trailing slash)
# Local: http://localhost:3000
# Production: https://your-domain.com or https://your-app.railway.app
NEXTAUTH_URL="http://localhost:3000"

# ===========================================
# Email Service (Resend - Recommended)
# ===========================================
# Get from https://resend.com/api-keys
# Free tier: 3,000 emails/month
RESEND_API_KEY=""

# Team notification emails
EMAIL_FROM="Epitome Kia <noreply@epitomekia.com>"
EMAIL_SALES_TEAM="sales@epitomekia.com"
EMAIL_SERVICE_TEAM="service@epitomekia.com"

# ===========================================
# Email Service (SendGrid - Alternative)
# ===========================================
SENDGRID_API_KEY=""
SENDGRID_FROM_EMAIL="noreply@epitomekia.com"

# ===========================================
# AI/Chatbot (for future chatbot feature)
# ===========================================
ANTHROPIC_API_KEY=""
OPENAI_API_KEY=""

# ===========================================
# SMS Notifications (Twilio - Optional)
# ===========================================
TWILIO_ACCOUNT_SID=""
TWILIO_AUTH_TOKEN=""
TWILIO_PHONE_NUMBER=""

# ===========================================
# CRM Integration (Optional)
# ===========================================
CRM_WEBHOOK_URL=""
CRM_API_KEY=""

# ===========================================
# Analytics (Optional)
# ===========================================
NEXT_PUBLIC_GA_ID=""
NEXT_PUBLIC_POSTHOG_KEY=""
NEXT_PUBLIC_POSTHOG_HOST=""

# ===========================================
# Media/Storage (Optional)
# ===========================================
# For car images and uploads
CLOUDINARY_CLOUD_NAME=""
CLOUDINARY_API_KEY=""
CLOUDINARY_API_SECRET=""

# Alternative: Cloudflare R2 / AWS S3
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_S3_BUCKET=""
AWS_REGION=""

# ===========================================
# Security (Recommended for Production)
# ===========================================
# reCAPTCHA for form spam protection
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=""
RECAPTCHA_SECRET_KEY=""

# ===========================================
# Error Tracking (Optional)
# ===========================================
SENTRY_DSN=""
SENTRY_AUTH_TOKEN=""

# ===========================================
# App Configuration
# ===========================================
NEXT_PUBLIC_SITE_URL="http://localhost:3000"
NEXT_PUBLIC_SITE_NAME="Epitome Kia"
NODE_ENV="development"

# ===========================================
# Build Configuration
# ===========================================
# Set to "true" to skip env validation during CI/CD builds
SKIP_ENV_VALIDATION=""
